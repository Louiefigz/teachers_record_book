<form action='/curriculum/new' method='post'>

  <% unless @teacher.curriculums == [] %>
  <select name="class_name_id">
      <% @teacher.curriculums.each do |curr|  %>
        <option value="<%= curr.id %>"><%= curr.name%></option>
      <% end %>
  </select>
  <% end %>


  <h3>What's the name of your Curriculum</h3>
  <input type="text" name="name" >

  <input type="submit" value="Create Curriculum">

</form>
